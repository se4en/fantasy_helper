FROM node:18-alpine

WORKDIR /fantasy_helper

COPY ./fantasy_helper/ui/package.json /fantasy_helper

RUN npm install
COPY ./fantasy_helper/ui /fantasy_helper
RUN npm run build

# EXPOSE 8501
EXPOSE 4173
HEALTHCHECK CMD curl --fail http://localhost:4173/

CMD ["npm", "run", "preview", "--", "--port", "4173", "--host", "0.0.0.0"]
